# Jetson Orin Nano Production Configuration
# AI Meeting Transcription Assistant

# Flask Configuration
SECRET_KEY=your-secure-random-secret-key-generate-this
FLASK_ENV=production
JWT_EXPIRATION_HOURS=24

# Server Configuration (Jetson Optimized)
PORT=5000
HOST=0.0.0.0

# CORS Configuration for home server access
# Add your local network and external domains
CORS_ORIGINS=http://localhost:3000,http://192.168.1.0/24,https://yourdomain.com

# API Keys (Required - Get from service providers)
ASSEMBLYAI_API_KEY=your-assemblyai-key-here
GEMINI_API_KEY=your-gemini-key-here

# Jetson Performance Optimization
WORKERS=2
WORKER_CLASS=eventlet
WORKER_CONNECTIONS=100
MAX_REQUESTS=1000
TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/ai-meeting-notes/logs/app.log

# Security Configuration
RATE_LIMIT_PER_MINUTE=30

# Audio Processing Configuration
MAX_CONTENT_LENGTH=104857600  # 100MB
UPLOAD_FOLDER=/opt/ai-meeting-notes/uploads

# Optional: Advanced Features (Disable for lighter deployment)
ENABLE_SPEAKER_DIARIZATION=false
ENABLE_NEMO_MODELS=false

# Network Configuration
EXTERNAL_URL=https://your-jetson-domain.com
INTERNAL_IP=192.168.1.100  # Your Jetson's local IP
