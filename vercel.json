{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "CORS_ORIGINS": "https://ai-meetingnotes.vercel.app"
  },
  "functions": {
    "app.py": {
      "includeFiles": [
        "templates/**",
        "static/**",
        "app/**"
      ]
    }
  }
}
